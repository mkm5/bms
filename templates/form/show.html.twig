{% extends 'base.html.twig' %}

{% block title %}{{ formDefinition.name }}{% endblock %}

{% block body %}
    <div class="min-h-screen w-full flex items-center justify-center p-4 overflow-auto">
        <div class="w-full max-w-lg">
            <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                <div class="px-6 py-5 border-b border-gray-200">
                    <h1 class="text-xl font-semibold text-gray-900">{{ formDefinition.name }}</h1>
                    {% if formDefinition.description %}
                        <p class="mt-2 text-sm text-gray-600">{{ formDefinition.description }}</p>
                    {% endif %}
                </div>
                <div class="p-6">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="pt-4">
                            <twig:Elements:Button type="submit" width="full">Submit</twig:Elements:Button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
