{# @prop variant 'default'|'destructive' #}
{%- props variant = 'default' -%}
{%- set style = html_cva(
    base: 'relative w-full rounded-lg border p-4 [&>svg~*]:pl-7 [&>svg+div]:translate-y-[-3px] [&>svg]:absolute [&>svg]:left-4 [&>svg]:top-4 [&>svg]:text-foreground',
    variants: {
        variant: {
            default: 'bg-background text-foreground',
            destructive: 'border-destructive/50 text-destructive dark:border-destructive [&>svg]:text-destructive',
        },
    },
) -%}

<div
    class="{{ style.apply({variant: variant}, attributes.render('class'))|tailwind_merge }}"
    role="alert"
    {{ attributes }}
>
    <twig:ux:icon name="tabler:{{ variant == 'default' ? 'info-circle' : 'alert-circle' }}" class="h-4 w-4" />

    {%- if block('title') is defined -%}
    <h5
        class="{{ 'mb-1 font-medium leading-none tracking-tight ' ~ attributes.nested('title').render('class')|tailwind_merge }}"
        {{ attributes.nested('title') }}
    >
        {{- block('title') -}}
    </h5>
    {%- endif -%}

    {%- if block('description') is defined -%}
    <p
        class="{{ 'text-sm [&_p]:leading-relaxed ' ~ attributes.nested('description').render('class')|tailwind_merge }}"
        {{ attributes.nested('description') }}
    >
        {{- block('description') }}
    </p>
    {%- endif -%}
</div>
