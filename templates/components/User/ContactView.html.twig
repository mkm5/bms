<div {{ attributes }}>
    <div class="w-full space-y-6">
        <div class="flex items-center gap-2 text-sm text-gray-500">
            <a href="{{ path('app_user_contacts') }}" class="hover:text-gray-900 hover:underline">Contacts</a>
            <twig:ux:icon name="tabler:chevron-right" class="w-4 h-4" />
            <span class="text-gray-900">{{ contact.firstName }} {{ contact.lastName }}</span>
        </div>

        <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Contact Details</h2>
                <twig:Elements:Button
                    data-action="live#action"
                    data-live-action-param="editContact"
                >
                    <twig:ux:icon name="tabler:pencil" class="mr-2" />Edit
                </twig:Elements:Button>
            </div>
            <div class="p-6 space-y-6">
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 mb-1">First Name</h3>
                        <p class="text-gray-900">{{ contact.firstName }}</p>
                    </div>

                    <div>
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Last Name</h3>
                        <p class="text-gray-900">{{ contact.lastName }}</p>
                    </div>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Company</h3>
                    {% if contact.company %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                            {{ contact.company.name }}
                        </span>
                    {% else %}
                        <p class="text-gray-500">No company assigned.</p>
                    {% endif %}
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-2">Communication Channels</h3>
                    {% if contact.communcationChannels|length > 0 %}
                        <div class="space-y-2">
                            {% for channel in contact.communcationChannels %}
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800 min-w-24">
                                        {% if channel.type.value == 'email' %}
                                            <twig:ux:icon name="tabler:mail" class="w-3 h-3 mr-1" />Email
                                        {% elseif channel.type.value == 'phone_work' %}
                                            <twig:ux:icon name="tabler:phone" class="w-3 h-3 mr-1" />Work Phone
                                        {% elseif channel.type.value == 'phone_personal' %}
                                            <twig:ux:icon name="tabler:device-mobile" class="w-3 h-3 mr-1" />Personal
                                        {% else %}
                                            <twig:ux:icon name="tabler:message" class="w-3 h-3 mr-1" />Other
                                        {% endif %}
                                    </span>
                                    <span class="text-gray-900">{{ channel.value }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-500">No communication channels.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <twig:Elements:Modal name="{{ this.modalName }}">
        <twig:User:ContactEdit />
    </twig:Elements:Modal>
</div>
