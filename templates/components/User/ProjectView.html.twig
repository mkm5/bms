<div {{ attributes }}>
    <div class="w-full space-y-6">
        <div class="flex items-center gap-2 text-sm text-gray-500">
            <a href="{{ path('app_user_projects') }}" class="hover:text-gray-900 hover:underline">Projects</a>
            <twig:ux:icon name="tabler:chevron-right" class="w-4 h-4" />
            <span class="text-gray-900">{{ project.name }}</span>
        </div>

        <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Project Details</h2>
                <twig:Elements:Button
                    data-action="live#emit"
                    data-live-event-param="project:edit"
                    data-live-project-param="{{ project.id }}"
                >
                    <twig:ux:icon name="tabler:pencil" class="mr-2" />Edit
                </twig:Elements:Button>
            </div>
            <div class="p-6 space-y-6">
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Name</h3>
                    <p class="text-gray-900">{{ project.name }}</p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Description</h3>
                    <p class="text-gray-900 whitespace-pre-wrap">{{ project.description|default('No description provided.') }}</p>
                </div>

                <div>
                    <div class="flex gap-4">
                        <h3 class="inline-block text-sm font-medium text-gray-500 mb-1">Status</h3>
                        <button
                            type="button"
                            data-action="live#action"
                            data-live-action-param="toggleProjectStatus"
                            class="inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-900 hover:cursor-pointer"
                            data-confirmation-handler-target="action"
                            data-confirmation-enabled="{{ not project.isFinished ? 'true' : 'false' }}"
                            data-confirmation-message="Marking this project as finished will archive all its forms and tickets. Continue?"
                        >
                            {% if project.isFinished %}
                                <twig:ux:icon name="tabler:player-play" class="w-4 h-4" /> Mark as active
                            {% else %}
                                <twig:ux:icon name="tabler:check" class="w-4 h-4" /> Mark as finished
                            {% endif %}
                        </button>
                    </div>
                    <div>
                        <twig:Elements:Pill
                            variant="{{ project.isFinished ? 'disabled' : 'default' }}"
                            content="{{ project.isFinished ? 'Finished' : 'Active' }}"
                        />
                    </div>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-2">Managers</h3>
                    {% if project.managers|length > 0 %}
                        <div class="flex flex-wrap gap-2">
                            {% for manager in project.managers %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                    {{ manager.displayName }}
                                </span>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-500">No managers assigned.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Documents</h2>
                <twig:Elements:Button
                    data-action="live#emit"
                    data-live-event-param="project:assign-document"
                    data-live-project-param="{{ project.id }}"
                >
                    <twig:ux:icon name="tabler:plus" class="mr-2" />Add Document
                </twig:Elements:Button>
            </div>
            <div class="p-6">
                {% if project.documents|length > 0 %}
                    <div class="space-y-2">
                        {% for document in project.documents %}
                            <div class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:bg-gray-50">
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center gap-2">
                                        <a href="{{ path('app_user_document_view', {id: document.id}) }}" class="font-medium text-gray-900 hover:text-blue-600 hover:underline truncate">
                                            {{ document.name }}
                                        </a>
                                        {% if document.currentVersion %}
                                            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-0.5 rounded">
                                                v{{ document.currentVersion.versionNumber }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="ml-3 shrink-0">
                                    <button
                                        type="button"
                                        class="inline-flex items-center justify-center w-8 h-8 rounded-full text-gray-400 hover:text-red-600 hover:bg-red-50 transition-colors cursor-pointer"
                                        data-action="live#action"
                                        data-live-action-param="removeDocument"
                                        data-live-document-id-param="{{ document.id }}"
                                        title="Remove document"
                                    >
                                        <twig:ux:icon name="tabler:x" class="w-5 h-5" />
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 text-center py-4">No documents assigned to this project.</p>
                {% endif %}
            </div>
        </div>

        <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Forms</h2>
            {%- with formListingConfig only -%}
                {%- include 'listings/_forms.html.twig' %}
            {%- endwith -%}
        </div>

        <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Tickets</h2>
            {%- with ticketListingConfig only -%}
                {%- include 'listings/_tickets.html.twig' -%}
            {%- endwith -%}
        </div>
    </div>

    <twig:Elements:Modal name="project">
        <twig:User:ProjectEdit modalName="project" />
    </twig:Elements:Modal>

    <twig:Elements:Modal name="project-document-search">
        <twig:User:ProjectDocumentSearch modalName="project-document-search" />
    </twig:Elements:Modal>
</div>
