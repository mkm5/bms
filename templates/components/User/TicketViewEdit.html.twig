<div {{ attributes.defaults({'data-controller': 'autocomplete-select-extend'}) }}>
    {% if viewTicket is not empty and status == 'view' %}
        <div class="space-y-6">
            <div class="pr-8">
                <h2 class="text-xl font-semibold text-gray-900 wrap-break-word">{{ viewTicket.title }}</h2>
                <p class="text-sm text-gray-500 mt-1">{{ viewTicket.project.name }}</p>
            </div>

            <div class="grid grid-cols-2 gap-6">
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Status</h3>
                    <twig:Elements:Pill content="{{ viewTicket.status.name }}"/>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Tags</h3>
                    {% if viewTicket.tags|length > 0 %}
                        <div class="flex flex-wrap gap-2">
                            {% for tag in viewTicket.tags %}
                                <twig:Elements:Pill content="{{ tag.name }}"/>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-400 text-sm">No tags</p>
                    {% endif %}
                </div>
            </div>

            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-1">Description</h3>
                {% if viewTicket.description %}
                    <p class="text-gray-900 whitespace-pre-wrap">{{ viewTicket.description }}</p>
                {% else %}
                    <p class="text-gray-400 text-sm">No description</p>
                {% endif %}
            </div>

            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-2">Tasks</h3>
                {% if viewTicket.tasks|length > 0 %}
                    <div class="space-y-2">
                        {% for task in viewTicket.tasks %}
                            <div id="task-{{ task.id }}" class="flex items-center gap-3">
                                <button
                                    type="button"
                                    class="shrink-0 cursor-pointer hover:scale-110 transition-transform"
                                    data-action="live#action"
                                    data-live-action-param="debounce(300)|toggleTask"
                                    data-live-task-id-param="{{ task.id }}"
                                    {%- if not viewTicket.editable -%}disabled{%- endif -%}
                                >
                                    {% if task.finished %}
                                        <twig:ux:icon name="tabler:circle-check-filled" class="w-5 h-5 text-green-500" />
                                    {% else %}
                                        <twig:ux:icon name="tabler:circle" class="w-5 h-5 text-gray-300 hover:text-gray-400" />
                                    {% endif %}
                                </button>
                                <span class="{{ task.finished ? 'text-gray-500 line-through' : 'text-gray-900' }}">
                                    {{ task.description }}
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-400 text-sm">No tasks</p>
                {% endif %}
            </div>

            {%- if viewTicket.editable -%}
            <div class="flex justify-end pt-4 border-t border-gray-200">
                <twig:Elements:Button
                    data-action="live#emit"
                    data-live-event-param="ticket:edit"
                    data-live-ticket-param="{{ viewTicket.id }}"
                >
                    <twig:ux:icon name="tabler:pencil" class="mr-2" />Edit
                </twig:Elements:Button>
            </div>
            {%- endif -%}
        </div>
    {% elseif status == 'edit' %}
        {{ form_start(form, {attr: {'data-action': 'live#action:prevent', 'data-live-action-param': 'save'}}) }}
            {% do form.tasks.setRendered %}
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            {{ form_row(form.project) }}
            {{ form_row(form.status) }}
            <div>
                <div class="flex items-center justify-between mb-1">
                    {{ form_label(form.tags) }}
                    <button
                        type="button"
                        class="inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-800 cursor-pointer"
                        data-action="live#emit"
                        data-live-event-param="tag:create"
                    >
                        <twig:ux:icon name="tabler:plus" class="w-4 h-4" />
                        Create Tag
                    </button>
                </div>
                {{ form_widget(form.tags) }}
            </div>

            <div>
                <div class="flex items-center justify-between mb-3">
                    <h3 class="text-sm font-medium text-gray-500">Tasks</h3>
                    <button
                        type="button"
                        class="inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-800 cursor-pointer"
                        data-action="live#action"
                        data-live-action-param="addTask"
                    >
                        <twig:ux:icon name="tabler:plus" class="w-4 h-4" />
                        Add Task
                    </button>
                </div>

                {% if form.tasks|length > 0 %}
                    <div class="space-y-2">
                        {% for key, taskForm in form.tasks %}
                            <div class="flex items-center gap-3 p-2 bg-gray-50 rounded-lg group">
                                {{ form_widget(taskForm.isFinished, {attr: {class: 'w-5 h-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500'}}) }}
                                <div class="flex-1">
                                    {{ form_widget(taskForm.description, {attr: {class: 'w-full border-0 bg-transparent p-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 text-sm'}}) }}
                                </div>
                                <button
                                    type="button"
                                    class="p-1 text-gray-400 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer"
                                    data-action="live#action"
                                    data-live-action-param="removeTask"
                                    data-live-index-param="{{ key }}"
                                >
                                    <twig:ux:icon name="tabler:trash" class="w-4 h-4" />
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-400 text-sm">No tasks yet. Click "Add Task" to create one.</p>
                {% endif %}
            </div>

            <div class="flex justify-end pt-6 mb-0 border-t border-gray-200">
                <twig:Elements:Button type="submit">
                    <twig:ux:icon name="tabler:device-floppy" class="mr-2" />Save
                </twig:Elements:Button>
            </div>
        {{ form_end(form) }}

        <twig:Elements:Modal name="{{ tagCreateModalName }}" :zIndex="1100">
            <twig:User:TagCreate />
        </twig:Elements:Modal>
    {% endif %}
</div>
