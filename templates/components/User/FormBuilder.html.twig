<div {{ attributes }}>
    <h2 class="text-xl font-semibold text-gray-900 mb-6">
        {{ formDefinition.id ? 'Edit Form' : 'New Form' }}
    </h2>

    {{ form_start(form, {
        attr: {
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'save'
        }
    }) }}
        {# Form Definition Fields #}
        <div class="space-y-4 mb-8">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.project) }}
        </div>

        {# Fields Collection #}
        {% do form.fields.setRendered %}

        <div class="border-t border-gray-200 pt-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-medium text-gray-900">Form Fields</h3>
                <button
                    type="button"
                    class="inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-colors"
                    data-action="live#action"
                    data-live-action-param="addField"
                >
                    <twig:ux:icon name="tabler:plus" class="w-4 h-4" />
                    Add Field
                </button>
            </div>

            <div class="space-y-4">
                {% for index, fieldForm in form.fields %}
                    {% set fieldType = this.formValues.fields[index].type|default('text') %}
                    {% set hasChoices = fieldType in ['select', 'radio'] %}
                    {% set isRange = fieldType == 'range' %}

                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        {# Field Header #}
                        <div class="flex items-start justify-between gap-4 mb-4">
                            <div class="flex-1 grid grid-cols-1 md:grid-cols-3 gap-4">
                                {{ form_row(fieldForm.name, {label: 'Name'}) }}
                                {{ form_row(fieldForm.type, {label: 'Type'}) }}
                                <div class="flex items-center pt-6">
                                    {{ form_widget(fieldForm.isRequired) }}
                                    <label class="ml-2 text-sm text-gray-700">Required</label>
                                </div>
                            </div>
                            <button
                                type="button"
                                class="p-2 text-red-600 hover:text-red-800 hover:bg-red-100 rounded-lg transition-colors"
                                data-action="live#action"
                                data-live-action-param="removeField"
                                data-live-index-param="{{ index }}"
                            >
                                <twig:ux:icon name="tabler:trash" class="w-5 h-5" />
                            </button>
                        </div>

                        {# Help Text #}
                        {{ form_row(fieldForm.helpText, {label: 'Help Text', attr: {rows: 2}}) }}

                        {# Label Preview #}
                        {% set fieldName = this.formValues.fields[index].name|default('') %}
                        {% if fieldName %}
                            <p class="mt-2 text-xs text-gray-500">
                                Label: <code class="bg-gray-200 px-1 rounded">{{ fieldName|lower|replace({' ': '_'})|replace({'[^a-z0-9_]': ''})|trim('_') }}</code>
                            </p>
                        {% endif %}

                        {# Type-specific Options #}
                        {% if hasChoices %}
                            {# Select/Radio Choices #}
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <div class="flex items-center justify-between mb-3">
                                    <label class="text-sm font-medium text-gray-700">Options</label>
                                    <button
                                        type="button"
                                        class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded transition-colors"
                                        data-action="live#action"
                                        data-live-action-param="addChoice"
                                        data-live-field-index-param="{{ index }}"
                                    >
                                        <twig:ux:icon name="tabler:plus" class="w-3 h-3" />
                                        Add Option
                                    </button>
                                </div>

                                {% set choices = this.fieldOptions[index].choices|default([]) %}
                                <div class="space-y-2">
                                    {% for choiceIndex, choice in choices %}
                                        <div class="flex gap-2 items-center">
                                            <input
                                                type="text"
                                                name="fieldOptions[{{ index }}][choices][{{ choiceIndex }}][label]"
                                                value="{{ choice.label }}"
                                                placeholder="Label"
                                                class="flex-1 rounded-lg border-gray-300 text-sm"
                                                data-model="fieldOptions.{{ index }}.choices.{{ choiceIndex }}.label"
                                            />
                                            <input
                                                type="text"
                                                name="fieldOptions[{{ index }}][choices][{{ choiceIndex }}][value]"
                                                value="{{ choice.value }}"
                                                placeholder="Value"
                                                class="flex-1 rounded-lg border-gray-300 text-sm"
                                                data-model="fieldOptions.{{ index }}.choices.{{ choiceIndex }}.value"
                                            />
                                            <label class="flex items-center gap-1 text-xs text-gray-600">
                                                <input
                                                    type="radio"
                                                    name="fieldOptions[{{ index }}][preselected]"
                                                    value="{{ choice.value }}"
                                                    {{ this.fieldOptions[index].preselected|default('') == choice.value ? 'checked' : '' }}
                                                    data-model="fieldOptions.{{ index }}.preselected"
                                                    class="text-blue-600"
                                                />
                                                Default
                                            </label>
                                            <button
                                                type="button"
                                                class="p-1 text-red-600 hover:text-red-800 hover:bg-red-100 rounded transition-colors"
                                                data-action="live#action"
                                                data-live-action-param="removeChoice"
                                                data-live-field-index-param="{{ index }}"
                                                data-live-choice-index-param="{{ choiceIndex }}"
                                            >
                                                <twig:ux:icon name="tabler:x" class="w-4 h-4" />
                                            </button>
                                        </div>
                                    {% else %}
                                        <p class="text-sm text-gray-500 italic">No options added yet.</p>
                                    {% endfor %}
                                </div>

                                {% if fieldType == 'select' %}
                                    <div class="mt-3 flex items-center">
                                        <input
                                            type="checkbox"
                                            name="fieldOptions[{{ index }}][multiselect]"
                                            id="multiselect_{{ index }}"
                                            value="1"
                                            {{ this.fieldOptions[index].multiselect|default(false) ? 'checked' : '' }}
                                            data-model="fieldOptions.{{ index }}.multiselect"
                                            class="rounded border-gray-300 text-blue-600"
                                        />
                                        <label for="multiselect_{{ index }}" class="ml-2 text-sm text-gray-700">Allow multiple selection</label>
                                    </div>
                                {% endif %}
                            </div>
                        {% elseif isRange %}
                            {# Range Options #}
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <label class="text-sm font-medium text-gray-700 mb-3 block">Range Configuration</label>
                                <div class="grid grid-cols-3 gap-4">
                                    <div>
                                        <label class="text-xs text-gray-600">Min</label>
                                        <input
                                            type="number"
                                            name="fieldOptions[{{ index }}][min]"
                                            value="{{ this.fieldOptions[index].min|default(0) }}"
                                            class="w-full rounded-lg border-gray-300 text-sm"
                                            data-model="fieldOptions.{{ index }}.min"
                                        />
                                    </div>
                                    <div>
                                        <label class="text-xs text-gray-600">Max</label>
                                        <input
                                            type="number"
                                            name="fieldOptions[{{ index }}][max]"
                                            value="{{ this.fieldOptions[index].max|default(100) }}"
                                            class="w-full rounded-lg border-gray-300 text-sm"
                                            data-model="fieldOptions.{{ index }}.max"
                                        />
                                    </div>
                                    <div>
                                        <label class="text-xs text-gray-600">Step</label>
                                        <input
                                            type="number"
                                            name="fieldOptions[{{ index }}][step]"
                                            value="{{ this.fieldOptions[index].step|default(1) }}"
                                            class="w-full rounded-lg border-gray-300 text-sm"
                                            data-model="fieldOptions.{{ index }}.step"
                                        />
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="text-center py-8 text-gray-500 bg-gray-50 rounded-lg border border-dashed border-gray-300">
                        <p>No fields added yet.</p>
                        <p class="text-sm mt-1">Click "Add Field" to start building your form.</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
            <twig:Elements:Button type="submit">
                {{ formDefinition.id ? 'Update Form' : 'Create Form' }}
            </twig:Elements:Button>
        </div>
    {{ form_end(form) }}
</div>
